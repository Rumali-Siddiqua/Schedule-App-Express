<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>Mr. Coffee - Schedule Website</title>
    <meta name="description" content="Check here your work schedule">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">> 
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/css/application.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Archivo&family=Nunito+Sans:wght@600;800;900&display=swap" rel="stylesheet">
</head>
<body>    
    <%- include('../includes/header') %>
    <section> 
        <h3>New User:</h3>
            <form action="/users/new" method="POST">     
                <div class="mb-3 col-3">                     
                    <label for="firstname" class="form-label">First Name *</label>
                        <input id="firstname" type="text" name="firstname" class="form-control" required />
                    
                </div>
                <div class="mb-3 col-3">
                    <label for="lastname" class="form-label">Last Name *</label>
                        <input id="lastname" type="text" name="lastname" class="form-control" required />
                </div>
                <div class="mb-3 col-3">
                    <label for="email" class="form-label">Email *</label>
                        <input id="email" type="email" name="email" class="form-control" required />
                </div>
                <div class="mb-3 col-3">
                    <label for="password" class="form-label">Password *</label>
                        <input id="password" type="password" name="password" class="form-control" required />            
                </div>                              
                <div class="mb-3 col-4">                                           
                    <button type="submit" class="btn btn-secondary col-4">Save</button>
                </div>
            </form>
    </section>
    <%- include('../includes/footer') %>
</body>
</html>